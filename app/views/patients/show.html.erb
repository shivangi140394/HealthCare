<div class="row">
  <%= render partial: 'shared/personal_info' %>
  <div class="col">
  <main class="main-content">
      <div class="row heading-border-line">
        <div class="col-lg-6 text-left">
          <%= link_to root_path do %>
            <span>
              <%= image_tag 'back-arrow.png' %>
            </span>
          <% end %>
          <span class="h4">
            <%= @patient.name %>
          </span>
        </div>
      </div>
    </main>
    <div class="card">
      <h5 class="card-header">
        Personal Information
      </h5>
      <div class="card-body">
        <div class="col-sm-8">
          <div class="row">
            <div class="col-md-6">
              <div class="font-weight-bold">Name</div>
              <div>
                <i> <%= @patient.name %></i>
              </div>
            </div>
          
            <div class="col-md-6">
              <div class="font-weight-bold">Contact Info</div>
              <div> 
                <i> <%= @patient.phone %></i>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-8">
          <div class="row">
            <div class="col-sm-6">
              <div class="font-weight-bold">Address</div>
              <div>
                <i> <%= @patient.address %></i>
              </div>
            </div>
            <div class="col-md-6">
              <div class="font-weight-bold">City</div>
              <div>
                <i> <%= @patient.city %> </i>
              </div>
            </div>
          </div>
          <div class="row mrg-top-5">
            <div class="col-md-6">
              <div class="font-weight-bold">State</div>
              <div>
                <i><%= @patient.state %> </i>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-8">
          <div class="row">
            <div class="col-md-6">
              <div class="font-weight-bold">Gender</div>
              <div>
                <i> <%= @patient.gender  %></i>
              </div>
            </div>
            <div class="col-md-6">
              <div class="font-weight-bold">Description</div>
              <div>
                <i> <%= @patient.description  %></i>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-4"></div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-md-6">
                <div class="font-weight-bold">Reports</div>
                <div>
                   <% if @patient.images.attached? %>
                    <% @patient.images.each do |image| %>
                      <span class="col">
                        <%= image_tag image, style: 'width: 200px; display: block', class: 'img-thumbnail' %> 
                      </span>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
