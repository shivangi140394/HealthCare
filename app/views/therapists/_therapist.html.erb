<div class="container">
  <div class="row">
    <div class="col">
      <h2>Therapists</h2>
    </div>
    <div class="col">
      <div class="col-sm-12 text-right">
        <%= link_to  patient_appointments_patients_path(data: @current_patient), class: 'btn btn-primary pull-right' do %>
          Confirm Appointment
        <% end %>
      </div> 
    </div>
  </div>           
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Specialization</th>
        <th>Experience</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @therapists.each do |therapist| %>
        <tr>
          <td><%= link_to therapist.name, therapist_path(therapist), class: "nav-link room-nav-link" %></td>
          <td><%= therapist.specialization %></td>
          <td><%= therapist.experience %></td>
          <td>
          <% if @current_patient.present?  %>
            <%= link_to 'Details', therapist_path(therapist), class: "btn btn-primary"  %>
          <% else %>
            <%= link_to new_patient_path, class: "btn btn-primary" do %>
              Details
            <% end %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>