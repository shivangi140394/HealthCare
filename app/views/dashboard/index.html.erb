<div class="row">
  <div class="col-12 col-md-3">
    <div class="mb-3">
      <% if @current_patient.present? || @current_therapist.present? %>
        <% if current_user.role.present? %> 
          Hi...
          <p> You Logged in as <%= current_user.role %></p>
          <% if current_user.role.patient? %> 
          <h4> <%= current_user.patients.first.name %> </h4><br>
            <br>
            <%= link_to edit_patient_path(@current_patient), class: "btn btn-primary" do %>
              Profile edit
            <% end %>
          <% else %>
            <%= current_user.therapists.first.name %>
            <br>
            <%= link_to edit_therapist_path(@current_therapist), class: "btn btn-primary" do %>
              Profile edit
            <% end %>
          <% end %>
          </p>
        <% else%>
          Click here to select the role <%= link_to 'Edit Role', edit_user_registration_path, :class => 'navbar-link' %>
        <% end %>
      <% else %>
        <% if current_user.role.patient? %>
          <%= link_to new_patient_path, class: "btn btn-primary" do %>
            Profile add
          <% end %>
        <% else %>
          <%= link_to new_therapist_path, class: "btn btn-primary" do %>
            Profile add
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
    
  <div class="col">
    <div class="alert alert-primary">
      <h4 class="alert-heading">
        Thanks for Register Yourself
      </h4>
    </div>

    <div class="container">
      <div class="row">
        <% if current_user.role.admin? %>
          <div class="card col" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Patients Register</h5>
              <h6 class="card-subtitle mb-2 text-muted">HealthCare</h6>
              <p class="card-text">Number of patients register.<br>
                <%= @patients.count %></p>
            </div>
          </div>
        <% end %>

        <% unless current_user.role.therapist? %>
          <div class="card col" style="width: 18rem;">
            <%= link_to therapists_path do %>
              <div class="card-body">
                <h5 class="card-title">Therapist Available</h5>
                <h6 class="card-subtitle mb-2 text-muted">HealthCare</h6>
                <p class="card-text">Number of doctor Available.<br>
                  <%= @therapists.count %></p>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if @appointments.present? %>
          <div class="card col" style="width: 18rem;">
            <%= link_to therapists_path do %>
              <div class="card-body">
                <h5 class="card-title">Appointments</h5>
                <h6 class="card-subtitle mb-2 text-muted">HealthCare</h6>
                <p class="card-text">Hi Doctor...Your Current Appointments Are Here...<br>
                  <%= @appointments.count %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>